@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    try {
        const canvasEl = document.getElementById('agingChart');

        if (!canvasEl) {
            console.warn('Aging chart canvas element not found');
            return;
        }

        const chartLabels = ['Current (0-30)', '1-30 Days', '31-60 Days', '61-90 Days', '90+ Days'];
        const chartColors = ['#28a745', '#ffc107', '#fd7e14', '#dc3545', '#6c757d'];

        const rawData = [
            @Model.CurrentAmount,
            @Model.Days1To30Amount,
            @Model.Days31To60Amount,
            @Model.Days61To90Amount,
            @Model.Over90DaysAmount
        ];

        const isValidData = rawData.every(v => typeof v === 'number' && isFinite(v) && !isNaN(v) && v >= 0);
        const hasData    = rawData.some(v => v > 0);

        const replaceCanvas = (cls, html) => {
            const msg = document.createElement('div');
            msg.className = cls;
            msg.innerHTML = html;
            canvasEl.parentNode.replaceChild(msg, canvasEl);
        };

        if (!isValidData || !hasData) {
            replaceCanvas('alert alert-info text-center', `
                <i class="fas fa-info-circle fa-2x mb-2"></i>
                <h6>No Accounts Receivable Data</h6>
                <p class="mb-0">There are currently no unpaid invoices to display in the aging chart.</p>
                <small class="text-muted">This is actually good news - all invoices are paid!</small>
            `);
            return;
        }

        // Filter to only buckets that have a value — keeps labels and colors aligned
        const filtered = chartLabels.reduce((acc, label, i) => {
            if (rawData[i] > 0) {
                acc.labels.push(label);
                acc.data.push(rawData[i]);
                acc.colors.push(chartColors[i]);
            }
            return acc;
        }, { labels: [], data: [], colors: [] });

        const totalValue = filtered.data.reduce((a, b) => a + b, 0);

        new Chart(canvasEl.getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: filtered.labels,
                datasets: [{
                    data: filtered.data,
                    backgroundColor: filtered.colors,
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: {
                    duration: 800,
                    easing: 'easeOutQuart'
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value      = context.parsed;
                                const percentage = totalValue > 0 ? ((value / totalValue) * 100).toFixed(1) : 0;
                                return context.label + ': $' + value.toLocaleString() + ' (' + percentage + '%)';
                            }
                        }
                    }
                },
                cutout: '50%'
            }
        });

        console.log('Aging chart initialized successfully');

    } catch (error) {
        console.error('Error initializing aging chart:', error);
        const el = document.getElementById('agingChart');
        if (el) {
            const msg = document.createElement('div');
            msg.className = 'alert alert-danger text-center';
            msg.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Unable to load chart. Please refresh the page.';
            el.parentNode.replaceChild(msg, el);
        }
    }
});
</script>
}


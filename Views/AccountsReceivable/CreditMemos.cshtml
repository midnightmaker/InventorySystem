@using InventorySystem.Controllers;
@model List<CreditMemoListViewModel>
@{
  ViewData["Title"] = "Credit Memos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-receipt"></i> Credit Memos</h2>
  <a href="/Accounting/CreateCustomerAdjustment" class="btn btn-primary">
    <i class="fas fa-plus"></i> Create New Adjustment
  </a>
</div>

<div class="card">
  <div class="card-body">
    @if (Model.Any())
    {
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Credit Memo #</th>
              <th>Date</th>
              <th>Customer</th>
              <th>Type</th>
              <th>Related Invoice</th>
              <th class="text-end">Amount</th>
              <th>Reason</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var memo in Model)
            {
              <tr>
                <td><strong>@memo.CreditMemoNumber</strong></td>
                <td>@memo.AdjustmentDate.ToString("MM/dd/yyyy")</td>
                <td>
                  <a href="/Customers/Details/@memo.CustomerId">@memo.CustomerName</a>
                </td>
                <td>
                  <span class="badge bg-@(memo.AdjustmentType == "Bad Debt Write-off" ? "danger" : "warning")">
                    @memo.AdjustmentType
                  </span>
                </td>
                <td>
                  @if (memo.RelatedSaleId.HasValue)
                  {
                    <a href="/Sales/Details/@memo.RelatedSaleId">@memo.RelatedSaleNumber</a>
                  }
                  else
                  {
                    <span class="text-muted">General</span>
                  }
                </td>
                <td class="text-end">
                  <strong class="text-success">$@memo.CreditAmount.ToString("N2")</strong>
                </td>
                <td>
                  @(memo.Reason.Length > 30 ? memo.Reason.Substring(0, 30) + "..." : memo.Reason)
                </td>
                <td class="text-center">
                  <div class="btn-group btn-group-sm">
                    <a href="/Sales/GenerateCreditMemo?adjustmentId=@memo.AdjustmentId"
                       class="btn btn-outline-primary" title="View Credit Memo">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/Customers/Details/@memo.CustomerId"
                       class="btn btn-outline-info" title="View Customer">
                      <i class="fas fa-user"></i>
                    </a>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    }
    else
    {
      <div class="text-center py-5">
        <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No Credit Memos Found</h5>
        <p class="text-muted">Credit memos will appear here when customer adjustments are created.</p>
        <a href="/Accounting/CreateCustomerAdjustment" class="btn btn-primary">
          <i class="fas fa-plus"></i> Create First Adjustment
        </a>
      </div>
    }
  </div>
</div>
@model InventorySystem.Models.Customer
@{
    ViewData["Title"] = $"Customer Details - {(!string.IsNullOrEmpty(Model.CompanyName) ? Model.CompanyName : Model.CustomerName)}";
    var analytics = ViewBag.Analytics as InventorySystem.Services.CustomerAnalytics;
    var documents = ViewBag.Documents as IEnumerable<InventorySystem.Models.CustomerDocument>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <!-- ? UPDATED: Prioritize Company Name in header -->
    <h1>
        <i class="fas fa-building"></i> 
        @if (!string.IsNullOrEmpty(Model.CompanyName))
        {
            @Model.CompanyName
            <br><small class="text-muted"><i class="fas fa-user"></i> @Model.CustomerName</small>
        }
        else
        {
            <i class="fas fa-user"></i> @Model.CustomerName
            <br><small class="text-muted text-italic">No company specified</small>
        }
    </h1>
    <div class="btn-group">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a href="@Url.Action("Analytics", new { id = Model.Id })" class="btn btn-info">
            <i class="fas fa-chart-line"></i> Analytics
        </a>
        <a href="/AccountsReceivable/CustomerStatement/@Model.Id" class="btn btn-success">
            <i class="fas fa-file-invoice-dollar"></i> Generate Statement
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    @if (Model.OutstandingBalance > 0)
    {
      <div class="btn-group">
        <a href="/Accounting/CreateCustomerAdjustment?customerId=@Model.Id"
           class="btn btn-outline-warning btn-sm">
          <i class="fas fa-user-edit"></i> Create Adjustment
        </a>

        <button type="button" class="btn btn-outline-warning btn-sm dropdown-toggle dropdown-toggle-split"
                data-bs-toggle="dropdown" aria-expanded="false">
          <span class="visually-hidden">Toggle Dropdown</span>
        </button>

        <ul class="dropdown-menu">
          <li><h6 class="dropdown-header">Adjustment Types</h6></li>
          <li>
            <a class="dropdown-item" href="/Accounting/CreateCustomerAdjustment?customerId=@Model.Id&type=allowance">
              <i class="fas fa-hand-holding-usd text-primary"></i> Sales Allowance
            </a>
          </li>
          <li>
            <a class="dropdown-item" href="/Accounting/CreateCustomerAdjustment?customerId=@Model.Id&type=discount">
              <i class="fas fa-percentage text-success"></i> Sales Discount
            </a>
          </li>
          <li>
            <a class="dropdown-item" href="/Accounting/CreateCustomerAdjustment?customerId=@Model.Id&type=baddebt">
              <i class="fas fa-exclamation-triangle text-danger"></i> Bad Debt Write-off
            </a>
          </li>
        </ul>
      </div>
    }
    </div>
</div>

@* Customer Overview Cards *@
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    <i class="fas fa-dollar-sign"></i> Total Sales
                </h5>
                <h3>$@Model.TotalSales.ToString("N2")</h3>
                <small class="text-muted">@Model.SalesCount orders</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-warning">
                    <i class="fas fa-exclamation-circle"></i> Outstanding
                </h5>
                <h3>$@Model.OutstandingBalance.ToString("N2")</h3>
                @if (Model.CreditLimit > 0)
                {
                    <small class="text-muted">$@Model.CreditAvailable.ToString("N2") available</small>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-info">
                    <i class="fas fa-calendar"></i> Customer Since
                </h5>
                <h3>@Model.CustomerSince</h3>
                @if (Model.LastSaleDate.HasValue)
                {
                    <small class="text-muted">Last sale: @Model.LastSaleDate.Value.ToString("MM/dd/yyyy")</small>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-success">
                    <i class="fas fa-check-circle"></i> Status
                </h5>
                <h3>@Model.CustomerStatus</h3>
                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </div>
        </div>
    </div>
</div>

@* Customer Information Tabs *@
<ul class="nav nav-tabs" id="customerTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#contact-tab">
            <i class="fas fa-address-card"></i> Contact Info
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#sales-tab">
            <i class="fas fa-chart-line"></i> Sales History
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#payments-tab">
            <i class="fas fa-money-bill-wave"></i> Payments &amp; Statement
            @if (Model.OutstandingBalance > 0)
            {
                <span class="badge bg-danger ms-1">@Model.CustomerPayments?.Count(p => p.Status == InventorySystem.Models.Enums.PaymentRecordStatus.Processed)</span>
            }
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#credit-tab">
            <i class="fas fa-credit-card"></i> Credit &amp; Billing
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#documents-tab">
            <i class="fas fa-file-alt"></i> Documents
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#accounts-payable-tab">
            <i class="fas fa-building"></i> Accounts Payable
            @if (Model.HasAccountsPayableInfo)
            {
                <span class="badge bg-success ms-1">?</span>
            }
        </button>
    </li>
</ul>

<div class="tab-content border border-top-0 p-4">
    @* Contact Information Tab *@
    <div class="tab-pane fade show active" id="contact-tab">
        <div class="row">
            <div class="col-md-6">
                <h5><i class="fas fa-user"></i> Basic Information</h5>
                <table class="table table-borderless">
                    @* Company name first and emphasized for B2B *@
                    <tr>
                        <td><strong>Company:</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.CompanyName))
                            {
                                <h6 class="mb-0 text-primary">@Model.CompanyName</h6>
                            }
                            else
                            {
                                <span class="text-muted">No company specified</span>
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="fas fa-plus"></i> Add Company
                                </a>
                            }
                        </td>
                    </tr>
                    <tr><td><strong>Contact Name:</strong></td><td>@Model.CustomerName</td></tr>
                    <tr><td><strong>Type:</strong></td><td><span class="badge bg-info">@Model.CustomerType</span></td></tr>
                    <tr><td><strong>Email:</strong></td><td><a href="mailto:@Model.Email">@Model.Email</a></td></tr>
                    <tr><td><strong>Phone:</strong></td><td>@(Model.Phone ?? "N/A")</td></tr>
                    <tr><td><strong>Mobile:</strong></td><td>@(Model.MobilePhone ?? "N/A")</td></tr>
                </table>
            </div>
            <div class="col-md-6">
                <h5><i class="fas fa-map-marker-alt"></i> Addresses</h5>
                <div class="mb-3">
                    <strong>Billing Address:</strong><br>
                    <address>@Html.Raw(Model.FullBillingAddress.Replace(", ", "<br>"))</address>
                </div>
                <div>
                    <strong>Shipping Address:</strong><br>
                    <address>@Html.Raw(Model.FullShippingAddress.Replace(", ", "<br>"))</address>
                </div>
            </div>
        </div>
    </div>

    @* Sales History Tab *@
    <div class="tab-pane fade" id="sales-tab">
        @if (analytics != null && analytics.MonthlySalesHistory.Any())
        {
            <canvas id="salesChart" height="100"></canvas>
        }
        <div class="table-responsive mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sale #</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model.Sales.Take(10))
                    {
                        <tr>
                            <td><a href="/Sales/Details/@sale.Id">@sale.SaleNumber</a></td>
                            <td>@sale.SaleDate.ToString("MM/dd/yyyy")</td>
                            <td>$@sale.TotalAmount.ToString("N2")</td>
                            <td><span class="badge bg-@(sale.PaymentStatus == PaymentStatus.Paid ? "success" : "warning")">@sale.PaymentStatus</span></td>
                            <td><a href="/Sales/Details/@sale.Id" class="btn btn-sm btn-outline-primary">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* Payments & Statement Tab *@
    <div class="tab-pane fade" id="payments-tab">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5><i class="fas fa-money-bill-wave"></i> Payments Received</h5>
            <a href="/AccountsReceivable/CustomerStatement/@Model.Id" class="btn btn-sm btn-success">
                <i class="fas fa-file-invoice-dollar"></i> View Full Statement
            </a>
        </div>

        @if (Model.CustomerPayments != null && Model.CustomerPayments.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Invoice #</th>
                            <th>Method</th>
                            <th>Reference</th>
                            <th class="text-end">Amount</th>
                            <th>Status</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pmt in Model.CustomerPayments.OrderByDescending(p => p.PaymentDate))
                        {
                            <tr>
                                <td>@pmt.PaymentDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    @if (pmt.Sale != null)
                                    {
                                        <a href="/Sales/Details/@pmt.SaleId" class="text-decoration-none">@pmt.Sale.SaleNumber</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>@pmt.PaymentMethod</td>
                                <td class="text-muted small">@(pmt.PaymentReference ?? "—")</td>
                                <td class="text-end fw-bold text-success">$@pmt.Amount.ToString("N2")</td>
                                <td>
                                    <span class="badge @(pmt.Status == InventorySystem.Models.Enums.PaymentRecordStatus.Processed ? "bg-success" : "bg-secondary")">
                                        @pmt.Status
                                    </span>
                                </td>
                                <td class="text-muted small">@(pmt.Notes ?? "—")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary fw-bold">
                        <tr>
                            <td colspan="4" class="text-end">Total Received:</td>
                            <td class="text-end text-success">
                                $@Model.CustomerPayments.Where(p => p.Status == InventorySystem.Models.Enums.PaymentRecordStatus.Processed).Sum(p => p.Amount).ToString("N2")
                            </td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No payments recorded for this customer.
            </div>
        }

        @if (Model.BalanceAdjustments != null && Model.BalanceAdjustments.Any())
        {
            <hr class="my-4" />
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5><i class="fas fa-sliders-h"></i> Balance Adjustments</h5>
                <a href="/Accounting/CreateCustomerAdjustment?customerId=@Model.Id" class="btn btn-sm btn-outline-warning">
                    <i class="fas fa-plus"></i> New Adjustment
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-warning">
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Related Invoice</th>
                            <th class="text-end">Amount</th>
                            <th>Reason</th>
                            <th>Created By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var adj in Model.BalanceAdjustments.OrderByDescending(a => a.AdjustmentDate))
                        {
                            <tr>
                                <td>@adj.AdjustmentDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <span class="badge @(adj.AdjustmentType == "Bad Debt Write-off" ? "bg-danger" : "bg-warning text-dark")">
                                        @adj.AdjustmentType
                                    </span>
                                </td>
                                <td>
                                    @if (adj.Sale != null)
                                    {
                                        <a href="/Sales/Details/@adj.Sale.Id">@adj.Sale.SaleNumber</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">General</span>
                                    }
                                </td>
                                <td class="text-end fw-bold text-warning">$@adj.AdjustmentAmount.ToString("N2")</td>
                                <td class="small text-muted">@adj.Reason</td>
                                <td class="small">@adj.CreatedBy</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary fw-bold">
                        <tr>
                            <td colspan="3" class="text-end">Total Adjustments:</td>
                            <td class="text-end text-warning">$@Model.TotalAdjustments.ToString("N2")</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }

        @* Balance Summary *@
        <hr class="my-4" />
        <div class="row">
            <div class="col-md-5 ms-auto">
                <div class="card border-@(Model.OutstandingBalance > 0 ? "danger" : "success")">
                    <div class="card-header bg-@(Model.OutstandingBalance > 0 ? "danger" : "success") text-white fw-bold">
                        Account Balance Summary
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm mb-0">
                            <tr>
                                <td>Total Invoiced (unpaid):</td>
                                <td class="text-end">$@Model.RawOutstandingBalance.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td>Less: Payments Received:</td>
                                <td class="text-end text-success">
                                    ($@(Model.CustomerPayments?.Where(p => p.Status == InventorySystem.Models.Enums.PaymentRecordStatus.Processed).Sum(p => p.Amount).ToString("N2") ?? "0.00"))
                                </td>
                            </tr>
                            @if (Model.TotalAdjustments > 0)
                            {
                                <tr>
                                    <td>Less: Adjustments:</td>
                                    <td class="text-end text-warning">($@Model.TotalAdjustments.ToString("N2"))</td>
                                </tr>
                            }
                            <tr class="fw-bold border-top @(Model.OutstandingBalance > 0 ? "table-danger" : "table-success")">
                                <td>Current Balance Due:</td>
                                <td class="text-end fs-6">$@Model.OutstandingBalance.ToString("N2")</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="mt-2 text-end">
                    <a href="/AccountsReceivable/CustomerStatement/@Model.Id" class="btn btn-success">
                        <i class="fas fa-file-invoice-dollar"></i> Generate Full Statement
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Credit & Billing Tab *@
    <div class="tab-pane fade" id="credit-tab">
        <div class="row">
            <div class="col-md-6">
                <h5><i class="fas fa-credit-card"></i> Credit Information</h5>
                <table class="table table-borderless">
                    <tr><td><strong>Credit Limit:</strong></td><td>$@Model.CreditLimit.ToString("N2")</td></tr>
                    <tr><td><strong>Outstanding Balance:</strong></td><td>$@Model.OutstandingBalance.ToString("N2")</td></tr>
                    <tr><td><strong>Available Credit:</strong></td><td>$@Model.CreditAvailable.ToString("N2")</td></tr>
                    <tr><td><strong>Payment Terms:</strong></td><td>@Model.DefaultPaymentTerms</td></tr>
                    <tr><td><strong>Tax Exempt:</strong></td><td>@(Model.IsTaxExempt ? "Yes" : "No")</td></tr>
                    @if (Model.IsTaxExempt)
                    {
                        <tr><td><strong>Tax Exempt ID:</strong></td><td>@Model.TaxExemptId</td></tr>
                    }
                </table>
            </div>
            <div class="col-md-6">
                <h5><i class="fas fa-cog"></i> Preferences</h5>
                <table class="table table-borderless">
                    <tr><td><strong>Pricing Tier:</strong></td><td><span class="badge bg-secondary">@Model.PricingTier</span></td></tr>
                    <tr><td><strong>Communication:</strong></td><td>@Model.PreferredCommunication</td></tr>
                    <tr><td><strong>Marketing Emails:</strong></td><td>@(Model.AcceptsMarketing ? "Yes" : "No")</td></tr>
                </table>
            </div>
        </div>
    </div>

    @* Documents Tab *@
    <div class="tab-pane fade" id="documents-tab">
        <div class="d-flex justify-content-between mb-3">
            <h5><i class="fas fa-file-alt"></i> Customer Documents</h5>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="fas fa-upload"></i> Upload Document
            </button>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Document</th>
                        <th>Type</th>
                        <th>Size</th>
                        <th>Uploaded</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (documents != null && documents.Any())
                    {
                        @foreach (var doc in documents)
                        {
                            <tr>
                                <td>
                                    <i class="@doc.FileTypeIcon"></i>
                                    @doc.DocumentName
                                </td>
                                <td>@doc.DocumentType</td>
                                <td>@doc.FileSizeFormatted</td>
                                <td>@doc.UploadedDate.ToString("MM/dd/yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Customers/Document/@doc.Id" class="btn btn-outline-primary" title="Download">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        <button class="btn btn-outline-danger" onclick="deleteDocument(@doc.Id)" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No documents uploaded</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* Accounts Payable Tab *@
    <div class="tab-pane fade" id="accounts-payable-tab">
        <div class="row">
            <div class="col-md-6">
                <h5><i class="fas fa-building"></i> Accounts Payable Contact</h5>
                @if (Model.HasAccountsPayableInfo)
                {
                    <table class="table table-borderless">
                        <tr><td><strong>Contact Name:</strong></td><td>@(Model.AccountsPayableContactName ?? "Not specified")</td></tr>
                        <tr><td><strong>Title:</strong></td><td>@(Model.AccountsPayableContactTitle ?? "N/A")</td></tr>
                        <tr><td><strong>Email:</strong></td><td>
                            @if (!string.IsNullOrEmpty(Model.AccountsPayableEmail))
                            {
                                <a href="mailto:@Model.AccountsPayableEmail">@Model.AccountsPayableEmail</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td></tr>
                        <tr><td><strong>Phone:</strong></td><td>@(Model.AccountsPayablePhone ?? "N/A")</td></tr>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        No Accounts Payable contact information configured.
                        <br><a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-primary mt-2">
                            <i class="fas fa-plus"></i> Add AP Info
                        </a>
                    </div>
                }
            </div>
            <div class="col-md-6">
                <h5><i class="fas fa-map-marker-alt"></i> AP Billing Address</h5>
                @if (!string.IsNullOrEmpty(Model.AccountsPayableBillingAddress))
                {
                    <address>@Html.Raw(Model.FullAccountsPayableBillingAddress.Replace(", ", "<br>"))</address>
                }
                else
                {
                    <p class="text-muted">No separate AP billing address configured. Will use standard billing address.</p>
                }
                
                <h5 class="mt-4"><i class="fas fa-cog"></i> Invoice Settings</h5>
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Direct to AP:</strong></td>
                        <td>
                            @if (Model.DirectInvoicesToAP)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>PO Required:</strong></td>
                        <td>
                            @if (Model.RequiresPurchaseOrder)
                            {
                                <span class="badge bg-warning">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.AccountsPayableInvoicePrefix))
                    {
                        <tr><td><strong>Invoice Prefix:</strong></td><td>@Model.AccountsPayableInvoicePrefix</td></tr>
                    }
                </table>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.AccountsPayableNotes))
        {
            <div class="row mt-3">
                <div class="col-12">
                    <h5><i class="fas fa-sticky-note"></i> AP Special Instructions</h5>
                    <div class="alert alert-light">
                        @Model.AccountsPayableNotes
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* Document Upload Modal *@
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Customers/UploadDocument" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" name="CustomerId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Document Name</label>
                        <input type="text" name="DocumentName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Document Type</label>
                        <select name="DocumentType" class="form-select" required>
                            <option value="">Select Type...</option>
                            <option value="Contract">Contract</option>
                            <option value="Agreement">Agreement</option>
                            <option value="Credit Application">Credit Application</option>

    <div class="col-md-4">
      <div class="mb-3">
        <label asp-for="VendorCode" class="form-label">
          <i class="fas fa-barcode text-info"></i>
          Vendor Code
        </label>
        <input asp-for="VendorCode" class="form-control" />
        <span asp-validation-for="VendorCode" class="text-danger"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label asp-for="ContactName" class="form-label">
          <i class="fas fa-user text-success"></i>
          Contact Name
        </label>
        <input asp-for="ContactName" class="form-control" />
        <span asp-validation-for="ContactName" class="text-danger"></span>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <label asp-for="ContactEmail" class="form-label">
          <i class="fas fa-envelope text-warning"></i>
          Contact Email
        </label>
        <input asp-for="ContactEmail" class="form-control" type="email" />
        <span asp-validation-for="ContactEmail" class="text-danger"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label asp-for="ContactPhone" class="form-label">

@model InventorySystem.Models.Vendor
@{
  ViewData["Title"] = "Edit Vendor";
}

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-edit"></i> Edit Vendor</h1>
  <div class="btn-group">
    <a href="/Vendors/Details/@Model.Id" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left"></i> Back to Details
    </a>
    <a href="/Vendors" class="btn btn-outline-info">
      <i class="fas fa-list"></i> All Vendors
    </a>
  </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
  <div class="alert alert-danger alert-dismissible fade show">
    @TempData["ErrorMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}

<div class="row">
  <div class="col-md-8">
    <form asp-action="Edit" method="post">
      @Html.HiddenFor(m => m.Id)
      @Html.HiddenFor(m => m.CreatedDate)

      <!-- Basic Information -->
      <div class="card">
        <div class="card-header">
          <h5><i class="fas fa-map-marker-alt"></i> Address Information</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label asp-for="AddressLine1" class="form-label">Address Line 1</label>
            <input asp-for="AddressLine1" class="form-control" />
            <span asp-validation-for="AddressLine1" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="AddressLine2" class="form-label">Address Line 2</label>
            <input asp-for="AddressLine2" class="form-control" />
            <span asp-validation-for="AddressLine2" class="text-danger"></span>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <label asp-for="City" class="form-label">City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label asp-for="State" class="form-label">State/Province</label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label asp-for="PostalCode" class="form-label">Postal Code</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label asp-for="Country" class="form-label">Country</label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
          </div>
        </div>
      </div>

      <!-- Business Information -->
      <div class="card mt-3">
        <div class="card-header">
          <h5><i class="fas fa-handshake"></i> Business Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label asp-for="PaymentTerms" class="form-label">Payment Terms</label>
                <select asp-for="PaymentTerms" class="form-select">
                  <option value="Net 15">Net 15</option>
                  <option value="Net 30">Net 30</option>
                  <option value="Net 45">Net 45</option>
                  <option value="Net 60">Net 60</option>
                  <option value="COD">Cash on Delivery (COD)</option>
                  <option value="Prepaid">Prepaid</option>
                </select>
                <span asp-validation-for="PaymentTerms" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label asp-for="TaxId" class="form-label">Tax ID/EIN</label>
                <input asp-for="TaxId" class="form-control" />
                <span asp-validation-for="TaxId" class="text-danger"></span>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label asp-for="CreditLimit" class="form-label">Credit Limit</label>
                <input asp-for="CreditLimit" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="CreditLimit" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label asp-for="DiscountPercentage" class="form-label">Discount Percentage</label>
                <input asp-for="DiscountPercentage" class="form-control" type="number" step="0.1" min="0" max="100" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Ratings and Status -->
      <div class="card mt-3">
        <div class="card-header">
          <h5><i class="fas fa-star"></i> Ratings & Status</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <label asp-for="QualityRating" class="form-label">Quality Rating</label>
                <select asp-for="QualityRating" class="form-select">
                  <option value="1">1 - Poor</option>
                  <option value="2">2 - Fair</option>
                  <option value="3">3 - Good</option>
                  <option value="4">4 - Very Good</option>
                  <option value="5">5 - Excellent</option>
                </select>
                <span asp-validation-for="QualityRating" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label asp-for="DeliveryRating" class="form-label">Delivery Rating</label>
                <select asp-for="DeliveryRating" class="form-select">
                  <option value="1">1 - Poor</option>
                  <option value="2">2 - Fair</option>
                  <option value="3">3 - Good</option>
                  <option value="4">4 - Very Good</option>
                  <option value="5">5 - Excellent</option>
                </select>
                <span asp-validation-for="DeliveryRating" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label asp-for="ServiceRating" class="form-label">Service Rating</label>
                <select asp-for="ServiceRating" class="form-select">
                  <option value="1">1 - Poor</option>
                  <option value="2">2 - Fair</option>
                  <option value="3">3 - Good</option>
                  <option value="4">4 - Very Good</option>
                  <option value="5">5 - Excellent</option>
                </select>
                <span asp-validation-for="ServiceRating" class="text-danger"></span>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">
                  <i class="fas fa-check-circle text-success"></i>
                  Active Vendor
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-check mb-3">
                <input asp-for="IsPreferred" class="form-check-input" type="checkbox" />
                <label asp-for="IsPreferred" class="form-check-label">
                  <i class="fas fa-star text-warning"></i>
                  Preferred Vendor
                </label>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
          </div>
        </div>
      </div>

      <!-- Submit Buttons -->
      <div class="card mt-3">
        <div class="card-body text-center">
          <button type="submit" class="btn btn-success btn-lg">
            <i class="fas fa-save"></i> Update Vendor
          </button>
          <a href="/Vendors/Details/@Model.Id" class="btn btn-outline-secondary btn-lg ms-2">
            <i class="fas fa-times"></i> Cancel
          </a>
        </div>
      </div>
    </form>
  </div>

  <!-- Right Column - Current Info -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h6><i class="fas fa-info-circle"></i> Current Information</h6>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-6">Created:</dt>
          <dd class="col-sm-6">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>

          <dt class="col-sm-6">Last Updated:</dt>
          <dd class="col-sm-6">@Model.LastUpdated.ToString("MM/dd/yyyy")</dd>

          <dt class="col-sm-6">Total Purchases:</dt>
          <dd class="col-sm-6">@Model.TotalPurchases.ToString("C")</dd>

          <dt class="col-sm-6">Items Supplied:</dt>
          <dd class="col-sm-6">@Model.ItemsSuppliedCount</dd>

          <dt class="col-sm-6">Overall Rating:</dt>
          <dd class="col-sm-6">
            @Model.OverallRating.ToString("F1") / 5.0
            <div>
              @for (int i = 1; i <= 5; i++)
              {
                <i class="fas fa-star @(i <= Model.OverallRating ? "text-warning" : "text-muted")"></i>
              }
            </div>
          </dd>
        </dl>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h6><i class="fas fa-lightning-bolt"></i> Quick Actions</h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <a href="/Vendors/ManageItems/@Model.Id" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-boxes"></i> Manage Items
          </a>
          <a href="/Purchases/Create?vendor=@Model.CompanyName" class="btn btn-outline-success btn-sm">
            <i class="fas fa-shopping-cart"></i> Create Purchase
          </a>
          <a href="/Vendors/ItemVendors?vendorId=@Model.Id" class="btn btn-outline-info btn-sm">
            <i class="fas fa-list"></i> View All Items
          </a>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h6><i class="fas fa-exclamation-triangle"></i> Important Notes</h6>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="fas fa-info-circle text-info"></i>
            Changing company name will affect existing purchase records
          </li>
          <li class="mb-2">
            <i class="fas fa-star text-warning"></i>
            Rating changes will update overall vendor ranking
          </li>
          <li class="mb-0">
            <i class="fas fa-ban text-danger"></i>
            Deactivating will hide vendor from new purchase forms
          </li>
        </ul>
      </div>
    </div>
  </div>

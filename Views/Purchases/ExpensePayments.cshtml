@{
  ViewData["Title"] = "Business Expenses";
}

<div class="container-fluid py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-success">
        <div class="card-header bg-success text-white text-center">
          <h4><i class="fas fa-route"></i> Business Expenses Have Moved</h4>
        </div>
        <div class="card-body text-center py-5">
          <i class="fas fa-file-invoice-dollar fa-4x text-success mb-4"></i>
          <h3>Redirecting to Business Expenses</h3>
          <p class="lead">Business expenses are now managed in a dedicated system for better accounting and reporting.</p>

          <div class="row mt-4">
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h5><i class="fas fa-boxes text-primary"></i> Operational Purchases</h5>
                  <p>Raw materials, consumables, and R&D materials for production</p>
                  <a href="/Purchases" class="btn btn-primary">
                    <i class="fas fa-shopping-cart"></i> View Purchases
                  </a>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h5><i class="fas fa-file-invoice-dollar text-success"></i> Business Expenses</h5>
                  <p>Utilities, software, services, and office expenses</p>
                  <a href="/Expenses" class="btn btn-success">
                    <i class="fas fa-credit-card"></i> Manage Expenses
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="alert alert-success mt-4">
            <i class="fas fa-check-circle"></i>
            <strong>Clean Separation:</strong> Operational purchases and business expenses are now properly separated for accurate financial tracking.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-redirect to business expenses after 5 seconds
  setTimeout(function() {
      window.location.href = '/Expenses';
  }, 5000);
</script>
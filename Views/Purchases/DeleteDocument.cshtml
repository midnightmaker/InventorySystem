@model InventorySystem.Models.PurchaseDocument
@{
  ViewData["Title"] = "Delete Purchase Document";
}

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-trash"></i> Delete Purchase Document</h1>
  <a href="/Purchases/Details/@Model.PurchaseId" class="btn btn-outline-secondary">
    <i class="fas fa-arrow-left"></i> Back to Purchase
  </a>
</div>

<div class="alert alert-danger">
  <i class="fas fa-exclamation-triangle"></i>
  <strong>Warning:</strong> Are you sure you want to delete this document? This action cannot be undone.
</div>

<div class="card">
  <div class="card-header">
    <h5><i class="fas fa-info-circle"></i> Document Information</h5>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Document Name:</dt>
      <dd class="col-sm-9"><strong>@Model.DocumentName</strong></dd>

      <dt class="col-sm-3">Document Type:</dt>
      <dd class="col-sm-9">
        <span class="badge bg-secondary">@Model.DocumentType</span>
      </dd>

      <dt class="col-sm-3">File Name:</dt>
      <dd class="col-sm-9">@Model.FileName</dd>

      <dt class="col-sm-3">File Size:</dt>
      <dd class="col-sm-9">@Model.FileSizeFormatted</dd>

      <dt class="col-sm-3">Uploaded Date:</dt>
      <dd class="col-sm-9">@Model.UploadedDate.ToString("MM/dd/yyyy HH:mm")</dd>

      @if (!string.IsNullOrEmpty(Model.Description))
      {
        <dt class="col-sm-3">Description:</dt>
        <dd class="col-sm-9">@Model.Description</dd>
      }

      <dt class="col-sm-3">Purchase:</dt>
      <dd class="col-sm-9">
        <a href="/Purchases/Details/@Model.PurchaseId">
          @Model.Purchase.Vendor - @Model.Purchase.PurchaseDate.ToString("MM/dd/yyyy") - @Model.Purchase.Item.PartNumber
        </a>
      </dd>
    </dl>
  </div>
</div>

<div class="mt-4">
  <form asp-action="DeleteDocument" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
      <i class="fas fa-trash"></i> Delete Document
    </button>
    <a href="/Purchases/Details/@Model.PurchaseId" class="btn btn-secondary">Cancel</a>
  </form>
</div>
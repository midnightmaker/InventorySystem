@model InventorySystem.Models.ChangeOrder

<div class="modal fade" id="changeOrderModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form asp-controller="ChangeOrders" asp-action="CreateEntry" method="post" enctype="multipart/form-data" id="changeOrderForm" class="ajax-form">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="fas fa-code-branch"></i> Create Change Order
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          @Html.HiddenFor(m => m.EntityType)
          @Html.HiddenFor(m => m.BaseEntityId)
          @Html.HiddenFor(m => m.CreatedBy)

          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <strong>Creating Version:</strong> This will create a new version of the @Model.EntityType with no initial design documents or components. You can add these after the change order is implemented.
          </div>

          <div class="mb-3">
            <label asp-for="NewVersion" class="form-label">New Version *</label>
            <input asp-for="NewVersion" class="form-control" placeholder="B, C, 2.0, etc." required />
            <span asp-validation-for="NewVersion" class="text-danger"></span>
            <div class="form-text">Enter the version number for this revision (e.g., B, C, 1.1, 2.0)</div>
          </div>

          <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"
                      placeholder="Describe the changes being made in this version..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Reason" class="form-label">Reason for Change</label>
            <textarea asp-for="Reason" class="form-control" rows="2"
                      placeholder="Why is this change necessary?"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="ImpactAnalysis" class="form-label">Impact Analysis</label>
            <textarea asp-for="ImpactAnalysis" class="form-control" rows="2"
                      placeholder="What is the impact of this change?"></textarea>
            <span asp-validation-for="ImpactAnalysis" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label class="form-label">Initial Documents (Optional)</label>
            <input type="file" class="form-control" name="documents" multiple
                   accept=".pdf,.jpg,.jpeg,.png,.gif,.bmp,.tiff,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.dwg,.dxf,.step,.stp,.iges,.igs,.txt,.rtf,.zip,.rar,.7z">
            <div class="form-text">You can upload supporting documents now or add them later. Multiple files allowed.</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Cancel
          </button>
          <button type="submit" class="btn btn-primary" id="submitChangeOrder">
            <i class="fas fa-plus"></i> Create Change Order
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


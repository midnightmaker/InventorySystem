@model InventorySystem.Models.CompanyInfo
@{
    ViewData["Title"] = "Company Information";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-building"></i> Company Information</h2>
        <a href="@Url.Action("Edit")" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit Company Info
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Company Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Company Name:</strong></div>
                        <div class="col-sm-9">@Model.CompanyName</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Address:</strong></div>
                        <div class="col-sm-9">
                            @Model.Address<br>
                            @if (!string.IsNullOrEmpty(Model.AddressLine2))
                            {
                                @Model.AddressLine2<br>
                            }
                            @Model.City, @Model.State @Model.ZipCode<br>
                            @Model.Country
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Phone:</strong></div>
                        <div class="col-sm-9">@Model.Phone</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Fax))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Fax:</strong></div>
                            <div class="col-sm-9">@Model.Fax</div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Email:</strong></div>
                        <div class="col-sm-9">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Website:</strong></div>
                        <div class="col-sm-9">
                            <a href="@(Model.Website.StartsWith("http") ? Model.Website : "https://" + Model.Website)" target="_blank">
                                @Model.Website
                            </a>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TaxId))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Tax ID/EIN:</strong></div>
                            <div class="col-sm-9">@Model.TaxId</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.BusinessLicense))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Business License:</strong></div>
                            <div class="col-sm-9">@Model.BusinessLicense</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Description:</strong></div>
                            <div class="col-sm-9">@Model.Description</div>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.PrimaryContactName))
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5><i class="fas fa-user"></i> Primary Contact</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Name:</strong></div>
                            <div class="col-sm-9">@Model.PrimaryContactName</div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.PrimaryContactTitle))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Title:</strong></div>
                                <div class="col-sm-9">@Model.PrimaryContactTitle</div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.PrimaryContactEmail))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Email:</strong></div>
                                <div class="col-sm-9">
                                    <a href="mailto:@Model.PrimaryContactEmail">@Model.PrimaryContactEmail</a>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.PrimaryContactPhone))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Phone:</strong></div>
                                <div class="col-sm-9">@Model.PrimaryContactPhone</div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-image"></i> Company Logo</h5>
                </div>
                <div class="card-body text-center">
                    @if (Model.HasLogo)
                    {
                        <img src="@Url.Action("Logo", new { id = Model.Id })" 
                             alt="Company Logo" 
                             class="img-fluid mb-3" 
                             style="max-width: 200px; max-height: 200px;" />
                        <p class="text-muted">@Model.LogoSizeDisplay</p>
                    }
                    else
                    {
                        <div class="text-muted mb-3">
                            <i class="fas fa-image fa-4x"></i>
                            <p class="mt-2">No logo uploaded</p>
                        </div>
                    }
                    
                    <a href="@Url.Action("Edit")" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> @(Model.HasLogo ? "Change Logo" : "Upload Logo")
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-clock"></i> Last Updated</h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.LastUpdated.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                </div>
            </div>
        </div>
    </div>
</div>
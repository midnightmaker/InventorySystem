@model InventorySystem.ViewModels.SaleDetailsViewModel
@using InventorySystem.Models.Enums

@{
    // Pre-shipment invoices are those with no associated Shipment row.
    // Shipment-linked invoices are already shown inline in _DetailsShipmentsCard.
    var preShipmentInvoices = Model.Invoices
        .Where(i => i.ShipmentId == null)
        .OrderByDescending(i => i.CreatedAt)
        .ThenByDescending(i => i.InvoiceDate)
        .ToList();

    var currentInvoice    = preShipmentInvoices.FirstOrDefault();
    var supersededInvoices = preShipmentInvoices.Skip(1).ToList();
}

@if (preShipmentInvoices.Any())
{
    <div class="row mt-0">
        <div class="col-12">
            <div class="card border-primary" style="border-top: none; border-top-left-radius: 0; border-top-right-radius: 0;">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice-dollar"></i> Pre-Shipment Invoices
                        <span class="badge bg-light text-primary ms-2">@preShipmentInvoices.Count</span>
                        @if (preShipmentInvoices.Count > 1)
                        {
                            <span class="badge bg-warning text-dark ms-1" title="Multiple invoice versions exist — the top one is current">
                                <i class="fas fa-layer-group"></i> @preShipmentInvoices.Count versions
                            </span>
                        }
                    </h5>
                    <small class="text-white-50">
                        Generated before shipment — sent to customer to collect payment
                    </small>
                </div>
                <div class="card-body p-0">

                    @* ?? Current (most recent) invoice ???????????????????????? *@
                    @if (currentInvoice != null)
                    {
                        var isOverdue = currentInvoice.DueDate.HasValue
                            && currentInvoice.DueDate.Value < DateTime.Today
                            && Model.Sale.PaymentStatus != PaymentStatus.Paid;

                        <div class="p-3 border-bottom bg-light">
                            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                                <div class="d-flex align-items-center gap-3">
                                    <div>
                                        <span class="badge bg-success fs-6 me-1">
                                            <i class="fas fa-check-circle"></i> Current
                                        </span>
                                        <strong class="fs-5">@currentInvoice.InvoiceNumber</strong>
                                    </div>
                                    <div class="text-muted small">
                                        <i class="fas fa-calendar-alt"></i>
                                        Generated @currentInvoice.CreatedAt.ToString("MM/dd/yyyy h:mm tt")
                                        @if (currentInvoice.IssuedBy != null)
                                        {
                                            <text> by @currentInvoice.IssuedBy</text>
                                        }
                                    </div>
                                    @if (currentInvoice.DueDate.HasValue)
                                    {
                                        <div class="@(isOverdue ? "text-danger fw-bold" : "text-muted") small">
                                            <i class="fas fa-clock"></i> Due @currentInvoice.DueDate.Value.ToString("MM/dd/yyyy")
                                            @if (isOverdue)
                                            {
                                                <span class="badge bg-danger ms-1">Overdue</span>
                                            }
                                        </div>
                                    }
                                    <div>
                                        <span class="badge @currentInvoice.StatusBadgeClass">@currentInvoice.InvoiceTypeLabel</span>
                                    </div>
                                    <div class="fw-bold text-success fs-6">
                                        @currentInvoice.TotalAmount.ToString("C")
                                    </div>
                                    <div>
                                        @if (currentInvoice.HasPdf)
                                        {
                                            <span class="badge bg-success" title="PDF stored @currentInvoice.PdfGeneratedAt?.ToString("MM/dd/yyyy h:mm tt")">
                                                <i class="fas fa-file-pdf"></i> PDF Ready
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock"></i> PDF Pending
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="btn-group">
                                    <button type="button"
                                            class="btn btn-primary"
                                            onclick="openInvoicePreviewModal(@currentInvoice.Id, @Html.Raw(System.Text.Json.JsonSerializer.Serialize(currentInvoice.InvoiceNumber)), @(currentInvoice.HasPdf ? "true" : "false"))"
                                            title="View current invoice">
                                        <i class="fas fa-eye"></i> View Invoice
                                    </button>
                                    <a href="@Url.Action("ViewInvoice", "Sales", new { invoiceId = currentInvoice.Id })"
                                       target="_blank"
                                       class="btn btn-outline-primary"
                                       title="Open in new tab">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    @if (currentInvoice.HasPdf)
                                    {
                                        <a href="@Url.Action("DownloadInvoice", "Sales", new { invoiceId = currentInvoice.Id })"
                                           class="btn btn-outline-secondary"
                                           title="Download PDF">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    @* ?? Superseded (previous) versions ??????????????????????? *@
                    @if (supersededInvoices.Any())
                    {
                        <div class="p-2 border-bottom">
                            <button class="btn btn-sm btn-outline-secondary w-100"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#supersededInvoices"
                                    aria-expanded="false">
                                <i class="fas fa-history"></i>
                                Show previous versions (@supersededInvoices.Count)
                                <i class="fas fa-chevron-down ms-1"></i>
                            </button>
                        </div>

                        <div class="collapse" id="supersededInvoices">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-secondary">
                                        <tr>
                                            <th>Invoice #</th>
                                            <th>Generated</th>
                                            <th>Due Date</th>
                                            <th class="text-end">Amount</th>
                                            <th>Issued By</th>
                                            <th class="text-center">PDF</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var invoice in supersededInvoices)
                                        {
                                            <tr class="text-muted">
                                                <td>
                                                    <span class="badge bg-secondary me-1">Superseded</span>
                                                    @invoice.InvoiceNumber
                                                </td>
                                                <td>
                                                    <small>@invoice.CreatedAt.ToString("MM/dd/yyyy h:mm tt")</small>
                                                </td>
                                                <td>
                                                    @if (invoice.DueDate.HasValue)
                                                    {
                                                        <small>@invoice.DueDate.Value.ToString("MM/dd/yyyy")</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">—</small>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    <small>@invoice.TotalAmount.ToString("C")</small>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@(invoice.IssuedBy ?? "System")</small>
                                                </td>
                                                <td class="text-center">
                                                    @if (invoice.HasPdf)
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-file-pdf"></i> Stored
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light text-muted border">None</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm">
                                                        <button type="button"
                                                                class="btn btn-outline-secondary btn-sm"
                                                                onclick="openInvoicePreviewModal(@invoice.Id, @Html.Raw(System.Text.Json.JsonSerializer.Serialize(invoice.InvoiceNumber)), @(invoice.HasPdf ? "true" : "false"))"
                                                                title="View this version">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        <a href="@Url.Action("ViewInvoice", "Sales", new { invoiceId = invoice.Id })"
                                                           target="_blank"
                                                           class="btn btn-outline-secondary btn-sm"
                                                           title="Open in new tab">
                                                            <i class="fas fa-external-link-alt"></i>
                                                        </a>
                                                        @if (invoice.HasPdf)
                                                        {
                                                            <a href="@Url.Action("DownloadInvoice", "Sales", new { invoiceId = invoice.Id })"
                                                               class="btn btn-outline-secondary btn-sm"
                                                               title="Download PDF">
                                                                <i class="fas fa-download"></i>
                                                            </a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
}

@model InventorySystem.ViewModels.UpdateServiceStatusViewModel

<div class="modal fade" id="serviceStatusModal" tabindex="-1" aria-labelledby="serviceStatusModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="serviceStatusModalLabel">
          <i class="fas fa-flag"></i> Update Service Status
          @if (Model.ServiceOrder != null)
          {
            <span class="text-muted">- @Model.ServiceOrder.ServiceOrderNumber</span>
          }
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form method="post" action="@Url.Action("UpdateStatus")">
        <!-- ? ADD: Antiforgery token -->
        @Html.AntiForgeryToken()
        
        <div class="modal-body">
          <input type="hidden" asp-for="ServiceOrderId" />

          <!-- Current Status -->
          @if (Model.ServiceOrder != null)
          {
            <div class="alert alert-info mb-3">
              <strong>Current Status:</strong> 
              <span class="badge bg-primary ms-2">@Model.ServiceOrder.StatusDisplay</span>
            </div>
          }

          <!-- New Status Selection -->
          <div class="mb-3">
            <label asp-for="NewStatus" class="form-label">New Status <span class="text-danger">*</span></label>
            <select asp-for="NewStatus" class="form-select" required>
              <option value="">Select new status...</option>
              @foreach (var status in Enum.GetValues<InventorySystem.Models.ServiceOrderStatus>())
              {
                <option value="@status">@status.ToString().Replace("_", " ")</option>
              }
            </select>
          </div>

          <!-- Conditional Fields -->
          <div id="schedulingFields" class="conditional-field" style="display: none;">
            <div class="mb-3">
              <label class="form-label">Scheduled Date & Time</label>
              <input asp-for="ScheduledDateTime" class="form-control" type="datetime-local" />
            </div>
            <div class="mb-3">
              <label class="form-label">Assigned Technician</label>
              <select asp-for="AssignedTechnician" class="form-select" asp-items="Model.TechnicianOptions">
                <option value="">Select technician...</option>
              </select>
            </div>
          </div>

          <div id="qualityCheckFields" class="conditional-field" style="display: none;">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label asp-for="QcTechnician" class="form-label">QC Technician</label>
                <select asp-for="QcTechnician" class="form-select" asp-items="Model.TechnicianOptions">
                  <option value="">Select technician...</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label asp-for="QcDate" class="form-label">QC Date</label>
                <input asp-for="QcDate" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
              </div>
            </div>
            <div class="mb-3">
              <label asp-for="QcNotes" class="form-label">QC Notes</label>
              <textarea asp-for="QcNotes" class="form-control" rows="2" placeholder="Quality control notes..."></textarea>
            </div>
          </div>

          <div id="completionFields" class="conditional-field" style="display: none;">
            <div class="form-check mb-2">
              <input asp-for="GenerateCertificate" class="form-check-input" type="checkbox" value="true" />
              <label asp-for="GenerateCertificate" class="form-check-label">
                <i class="fas fa-certificate"></i> Generate Service Certificate
              </label>
            </div>
          </div>

          <div id="holdCancelFields" class="conditional-field" style="display: none;">
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle"></i> This action may affect scheduling and customer expectations.
            </div>
          </div>

          <!-- Reason/Notes -->
          <div class="mb-3">
            <label asp-for="Reason" class="form-label">
              Reason/Notes <span id="reasonRequired" style="display: none;" class="text-danger">*</span>
            </label>
            <textarea asp-for="Reason" class="form-control" rows="3" 
                      placeholder="Enter reason for status change..."></textarea>
          </div>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Update Status</button>
        </div>
      </form>
    </div>
  </div>
</div>
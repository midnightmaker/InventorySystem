@model InventorySystem.ViewModels.AddTimeLogViewModel

<div class="modal fade" id="addTimeLogModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-clock"></i> Add Time Log
          @if (Model.ServiceOrder != null)
          {
            <span class="text-muted">- @Model.ServiceOrder.ServiceOrderNumber</span>
          }
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="addTimeLogForm" method="post" action="@Url.Action("AddTimeLog")">
        <div class="modal-body">
          <input type="hidden" asp-for="ServiceOrderId" />

          <div class="row">
            <div class="col-md-6 mb-3">
              <label asp-for="Date" class="form-label">Date <span class="text-danger">*</span></label>
              <input asp-for="Date" class="form-control" type="date" required />
              <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
              <label asp-for="Technician" class="form-label">Technician <span class="text-danger">*</span></label>
              <select asp-for="Technician" class="form-select" asp-items="Model.TechnicianOptions" required>
                <option value="">Select technician...</option>
              </select>
              <span asp-validation-for="Technician" class="text-danger"></span>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label asp-for="Hours" class="form-label">Hours Worked <span class="text-danger">*</span></label>
              <input asp-for="Hours" class="form-control" type="number" step="0.1" min="0.1" max="24" required
                     onchange="calculateTimeLogCost()" />
              <div class="form-text">Time spent on this service</div>
              <span asp-validation-for="Hours" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
              <label asp-for="HourlyRate" class="form-label">Hourly Rate</label>
              <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0"
                     onchange="calculateTimeLogCost()" />
              <div class="form-text">Leave blank to use service default</div>
              <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Estimated Cost</label>
            <input id="timeLogCost" class="form-control" readonly />
          </div>

          <div class="mb-3">
            <label asp-for="WorkDescription" class="form-label">Work Description</label>
            <textarea asp-for="WorkDescription" class="form-control" rows="3"
                      placeholder="Describe the work performed..."></textarea>
            <span asp-validation-for="WorkDescription" class="text-danger"></span>
          </div>

          <div class="form-check">
            <input asp-for="IsBillable" class="form-check-input" type="checkbox" />
            <label asp-for="IsBillable" class="form-check-label">
              <i class="fas fa-dollar-sign"></i> This time is billable to the customer
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i> Add Time Log
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function calculateTimeLogCost() {
      const hours = parseFloat(document.querySelector('#addTimeLogModal [name="Hours"]').value) || 0;
      const rate = parseFloat(document.querySelector('#addTimeLogModal [name="HourlyRate"]').value) || 0;
      const cost = hours * rate;

      document.getElementById('timeLogCost').value = cost > 0 ? '$' + cost.toFixed(2) : 'Using service default rate';
  }

  // Handle form submission via AJAX
  document.getElementById('addTimeLogForm').addEventListener('submit', function(e) {
      e.preventDefault();

      const formData = new FormData(this);

      if (window.LoadingIndicator) {
          window.LoadingIndicator.show('Adding Time Log...', 'Please wait');
      }

      fetch(this.action, {
          method: 'POST',
          body: formData,
          headers: {
              'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
          }
      })
      .then(response => response.json())
      .then(data => {
          if (window.LoadingIndicator) {
              window.LoadingIndicator.hide();
          }

          if (data.success) {
              bootstrap.Modal.getInstance(document.getElementById('addTimeLogModal')).hide();
              location.reload(); // Refresh to show new time log
          } else {
              alert('Error adding time log: ' + data.message);
          }
      })
      .catch(error => {
          if (window.LoadingIndicator) {
              window.LoadingIndicator.hide();
          }
          console.error('Error:', error);
          alert('Error adding time log. Please try again.');
      });
  });

  // Initialize cost calculation
  document.addEventListener('DOMContentLoaded', calculateTimeLogCost);
</script>
<style>
    .table th {
        vertical-align: middle;
    }
    
    .badge.fs-6 {
        font-size: 0.875rem !important;
    }
    
    .card-header h5 {
        margin-bottom: 0;
    }
    
    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }
    
    .alert ul {
        padding-left: 1.5rem;
    }
    
    .form-text {
        font-size: 0.875rem;
    }
</style>
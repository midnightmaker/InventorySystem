<!-- This is how to update your existing Views/Items/Index.cshtml -->
@model IEnumerable<InventorySystem.Models.Item>
@{
  ViewData["Title"] = "Items";
}

<!-- Updated header section with bulk upload button -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-boxes"></i> Items</h2>
  <div class="btn-group">
    <a asp-action="Create" class="btn btn-success">
      <i class="fas fa-plus"></i> Create New Item
    </a>
    <a asp-action="BulkUpload" class="btn btn-primary">
      <i class="fas fa-upload"></i> Bulk Upload
    </a>
  </div>
</div>

<!-- Optional: Add bulk upload info card -->
@if (TempData["SuccessMessage"] != null)
{
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}

@if (TempData["WarningMessage"] != null)
{
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}

@if (TempData["ErrorMessage"] != null)
{
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}

<!-- Optional: Quick info card about bulk upload -->
@if (!Model.Any())
{
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card border-info">
        <div class="card-body text-center">
          <i class="fas fa-info-circle text-info fa-2x mb-3"></i>
          <h5>No Items Found</h5>
          <p class="text-muted mb-3">Get started by creating your first item or uploading multiple items at once.</p>
          <div class="btn-group">
            <a asp-action="Create" class="btn btn-success">
              <i class="fas fa-plus"></i> Create First Item
            </a>
            <a asp-action="BulkUpload" class="btn btn-primary">
              <i class="fas fa-upload"></i> Bulk Upload Items
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
}
else
{
  <!-- Optional: Show bulk upload option even when items exist -->
  <div class="row mb-3">
    <div class="col-md-12">
      <div class="card border-light">
        <div class="card-body py-2">
          <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
              <i class="fas fa-lightbulb"></i>
              Need to add multiple items? Use our <a asp-action="BulkUpload" class="text-decoration-none">bulk upload feature</a> to import from CSV files.
            </small>
            <small class="text-muted">Total Items: <strong>@Model.Count()</strong></small>
          </div>
        </div>
      </div>
    </div>
  </div>
}

<!-- Your existing items table/content goes here -->
<!-- This is just showing where the button should be added -->
<div class="card">
  <div class="card-header">
    <h5>Items List</h5>
  </div>
  <div class="card-body">
    <!-- Your existing items display logic -->
    @if (Model.Any())
    {
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Part Number</th>
              <th>Description</th>
              <th>Current Stock</th>
              <th>Minimum Stock</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td><strong>@item.PartNumber</strong></td>
                <td>@item.Description</td>
                <td>
                  <span class="badge @(item.CurrentStock <= item.MinimumStock ? "bg-danger" : "bg-success")">
                    @item.CurrentStock
                  </span>
                </td>
                <td>@item.MinimumStock</td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>
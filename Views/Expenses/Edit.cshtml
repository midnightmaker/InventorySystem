@model EditExpenseViewModel

@{
    ViewData["Title"] = "Edit Expense Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-edit"></i> Edit Expense Type</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Expense Types</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Details", new { id = Model.Id })">@Model.ExpenseCode</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
    <div>
        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Details
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-list"></i> All Expense Types
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-cog"></i> Expense Type Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ExpenseCode" class="form-label"></label>
                                <input asp-for="ExpenseCode" class="form-control" placeholder="e.g., UTIL-001, OFFICE-001" />
                                <span asp-validation-for="ExpenseCode" class="text-danger"></span>
                                <div class="form-text">Unique code to identify this expense type</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                @Html.DropDownListFor(m => m.Category, ViewBag.Categories as SelectList, 
                                    new { @class = "form-select" })
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" 
                               placeholder="Brief description of this expense type" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DefaultAmount" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="DefaultAmount" class="form-control" 
                                           type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="DefaultAmount" class="text-danger"></span>
                                <div class="form-text">Leave blank for variable amounts</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DefaultVendorId" class="form-label"></label>
                                @Html.DropDownListFor(m => m.DefaultVendorId, ViewBag.Vendors as SelectList, 
                                    "Select a vendor (optional)", new { @class = "form-select" })
                                <span asp-validation-for="DefaultVendorId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="UnitOfMeasure" class="form-label"></label>
                                <select asp-for="UnitOfMeasure" class="form-select">
                                    <option value="Each">Each</option>
                                    <option value="Hour">Hour</option>
                                    <option value="Month">Month</option>
                                    <option value="Year">Year</option>
                                    <option value="Kilogram">Kilogram</option>
                                    <option value="Liter">Liter</option>
                                </select>
                                <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsRecurring" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsRecurring" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsRecurring" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                <div class="form-text">Inactive expense types won't appear in payment lists</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3" id="recurringOptions" style="display: none;">
                        <label asp-for="RecurringFrequency" class="form-label"></label>
                        <select asp-for="RecurringFrequency" class="form-select">
                            <option value="">Select frequency...</option>
                            <option value="Weekly">Weekly</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Quarterly">Quarterly</option>
                            <option value="Annually">Annually</option>
                        </select>
                        <span asp-validation-for="RecurringFrequency" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Comments" class="form-label"></label>
                        <textarea asp-for="Comments" class="form-control" rows="3" 
                                  placeholder="Additional notes about this expense type..."></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="button" class="btn btn-outline-danger ms-2" onclick="confirmDeactivate()">
                                <i class="fas fa-ban"></i> @(Model.IsActive ? "Deactivate" : "Activate")
                            </button>
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle"></i> Expense Type Summary</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Expense Code:</span>
                        <strong>@Model.ExpenseCode</strong>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Category:</span>
                        <span class="badge bg-light text-dark">@Model.CategoryDisplayName</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Status:</span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Recurring:</span>
                        @if (Model.IsRecurring)
                        {
                            <span class="text-info">
                                <i class="fas fa-sync"></i> @(Model.RecurringFrequency?.ToString() ?? "Yes")
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">One-time</span>
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Created:</span>
                        <small class="text-muted">@Model.CreatedDate.ToString("MM/dd/yyyy")</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-exclamation-triangle"></i> Important Notes</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <small>
                        <strong>Editing Considerations:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Changing the expense code will affect future payments</li>
                            <li>Deactivating will hide this expense type from payment lists</li>
                            <li>Changes to default amounts won't affect existing payments</li>
                            <li>Recurring settings help with budget planning</li>
                        </ul>
                    </small>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-tools"></i> Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("RecordPayment", new { expenseId = Model.Id })" class="btn btn-sm btn-success">
                        <i class="fas fa-credit-card"></i> Record Payment for This Type
                    </a>
                    <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> View Payment History
                    </a>
                    <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-plus"></i> Create Similar Expense Type
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Show/hide recurring options
            function toggleRecurringOptions() {
                if ($('#IsRecurring').is(':checked')) {
                    $('#recurringOptions').show();
                } else {
                    $('#recurringOptions').hide();
                    $('#RecurringFrequency').val('');
                }
            }

            $('#IsRecurring').change(toggleRecurringOptions);
            toggleRecurringOptions(); // Initial state
        });

        function confirmDeactivate() {
            const isActive = @Model.IsActive.ToString().ToLower();
            const action = isActive ? 'deactivate' : 'activate';
            const message = isActive 
                ? 'Are you sure you want to deactivate this expense type? It will no longer appear in payment lists.'
                : 'Are you sure you want to activate this expense type? It will become available for payments.';

            if (confirm(message)) {
                // Update the IsActive field and submit
                $('#IsActive').prop('checked', !isActive);
                $('form').submit();
            }
        }
    </script>
}
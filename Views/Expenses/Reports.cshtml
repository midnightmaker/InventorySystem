@model InventorySystem.ViewModels.ExpenseReportsViewModel
@{
    ViewData["Title"] = "Expense Reports";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-chart-bar"></i> Expense Reports & Analytics</h1>
    <div class="btn-group">
        <a href="/Expenses/IncomeStatement" class="btn btn-outline-primary">
            <i class="fas fa-file-invoice"></i> Income Statement
        </a>
        <a href="/Expenses/TaxReports" class="btn btn-outline-secondary">
            <i class="fas fa-calculator"></i> Tax Reports
        </a>
        <button class="btn btn-success" onclick="exportExpenseReport()">
            <i class="fas fa-download"></i> Export
        </button>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-filter"></i> Report Filters</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Reports">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="startDate" class="form-control" 
                                   value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">End Date</label>
                            <input type="date" name="endDate" class="form-control" 
                                   value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Expense Category</label>
                            <select name="expenseCategory" class="form-select">
                                @foreach (var category in Model.AvailableCategories)
                                {
                                    <option value="@category" selected="@(category == Model.ExpenseCategory)">
                                        @(category == "All" ? "All Categories" : category)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Generate Report
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalExpenses.ToString("C")</h4>
                        <p class="mb-0">Total Expenses</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-file-invoice-dollar fa-2x"></i>
                    </div>
                </div>
                <small>@Model.ExpenseCount total transactions</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.AverageExpense.ToString("C")</h4>
                        <p class="mb-0">Average Expense</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calculator fa-2x"></i>
                    </div>
                </div>
                <small>Per transaction average</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.ExpensesByCategory.Count</h4>
                        <p class="mb-0">Expense Categories</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tags fa-2x"></i>
                    </div>
                </div>
                <small>Active categories</small>
            </div>  
        </div>
    </div>
</div>

<!-- ✅ MOVED: Recent Expense Transactions - Now Full Width at Top -->
@if (Model.RecentExpensePayments.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Expense Transactions</h5>
                    <small class="text-muted">Showing latest @Model.RecentExpensePayments.Count() transactions</small>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 12%;">Date</th>
                                    <th style="width: 25%;">Vendor</th>
                                    <th style="width: 30%;">Expense</th>
                                    <th style="width: 15%;">Amount</th>
                                    <th style="width: 10%;">Method</th>
                                    <th style="width: 8%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.RecentExpensePayments)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold">@payment.PaymentDate.ToString("MM/dd/yyyy")</span>
                                            <br>
                                            <small class="text-muted">@payment.PaymentDate.ToString("dddd")</small>
                                        </td>
                                        <td>
                                            @if (payment.Vendor != null)
                                            {
                                                <a href="/Vendors/Details/@payment.Vendor.Id" class="text-decoration-none">
                                                    <strong>@payment.Vendor.CompanyName</strong>
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown Vendor</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Expenses/Details/@payment.ExpenseId" class="text-decoration-none">
                                                <strong>@payment.Expense.ExpenseCode</strong>
                                            </a>
                                            <br>
                                            <small class="text-muted">@payment.Expense.Description</small>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-danger">@payment.TotalAmount.ToString("C")</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">@(payment.PaymentMethod ?? "N/A")</span>
                                        </td>
                                        <td>
                                            <a href="/Expenses/Details/@payment.ExpenseId" class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Expenses/Index" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> View All Expenses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Expenses by Category and Monthly Trend -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-pie"></i> Expenses by Category</h5>
            </div>
            <div class="card-body">
                @if (Model.ExpensesByCategory.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Amount</th>
                                    <th>Count</th>
                                    <th>%</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.ExpensesByCategory)
                                {
                                    <tr>
                                        <td>
                                            <strong>@category.CategoryDisplayName</strong>
                                        </td>
                                        <td>@category.TotalAmount.ToString("C")</td>
                                        <td>@category.TransactionCount</td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                @category.Percentage.ToString("F1")%
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No expense data available for the selected period</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-line"></i> Monthly Expense Trend</h5>
            </div>
            <div class="card-body">
                @if (Model.MonthlyExpenses.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Month</th>
                                    <th>Amount</th>
                                    <th>Transactions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var month in Model.MonthlyExpenses.TakeLast(12))
                                {
                                    <tr>
                                        <td>@month.MonthName</td>
                                        <td>@month.TotalAmount.ToString("C")</td>
                                        <td>@month.TransactionCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No monthly data available</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- ✅ UPDATED: Top Vendors - Now Full Width -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-building"></i> Top Expense Vendors</h5>
            </div>
            <div class="card-body">
                @if (Model.TopVendors.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 30%;">Vendor</th>
                                    <th style="width: 20%;">Total Amount</th>
                                    <th style="width: 15%;">Transactions</th>
                                    <th style="width: 20%;">Average per Transaction</th>
                                    <th style="width: 15%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vendor in Model.TopVendors)
                                {
                                    <tr>
                                        <td>
                                            <a href="/Vendors/Details/@vendor.VendorId" class="text-decoration-none">
                                                <strong>@vendor.VendorName</strong>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-danger">@vendor.TotalAmount.ToString("C")</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@vendor.TransactionCount</span>
                                        </td>
                                        <td>@vendor.AverageAmount.ToString("C")</td>
                                        <td>
                                            <a href="/Vendors/Details/@vendor.VendorId" class="btn btn-sm btn-outline-primary" title="View Vendor">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No vendor data available</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- UPDATED: Link to create expense in Expenses system -->
@if (!Model.ExpensesByCategory.Any() && !Model.RecentExpensePayments.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No Expense Data Available</h4>
        <p class="text-muted">Start recording expenses to see analytics and reports here.</p>
        <a href="/Expenses/Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create Your First Expense
        </a>
    </div>
}

<!-- Document Compliance -->
<div class="card mt-4">
    <div class="card-header">
        <h5><i class="fas fa-file-alt"></i> Document Compliance</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-primary">@Model.ExpenseCount</h3>
                    <small class="text-muted">Total Payments</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-success">@(Model.ExpenseCount - Model.TotalPaymentsNeedingDocuments)</h3>
                    <small class="text-muted">With Documents</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-danger">@Model.TotalPaymentsNeedingDocuments</h3>
                    <small class="text-muted">Missing Documents</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="@(Model.DocumentComplianceRate >= 90 ? "text-success" : Model.DocumentComplianceRate >= 70 ? "text-warning" : "text-danger")">
                        @Model.DocumentComplianceRate.ToString("F1")%
                    </h3>
                    <small class="text-muted">Compliance Rate</small>
                </div>
            </div>
        </div>

        @if (Model.PaymentsWithoutDocuments.Any())
        {
            <hr>
            <h6><i class="fas fa-exclamation-triangle text-warning"></i> Payments Missing Documents</h6>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Expense</th>
                            <th>Vendor</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.PaymentsWithoutDocuments.Take(10))
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToString("MM/dd/yyyy")</td>
                                <td>@payment.Expense.ExpenseCode</td>
                                <td>@payment.Vendor?.CompanyName</td>
                                <td>@payment.TotalAmount.ToString("C")</td>
                                <td>
                                    <a href="@Url.Action("UploadDocument", new { expensePaymentId = payment.Id })" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-upload"></i> Upload
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function exportExpenseReport() {
            // TODO: Implement export functionality
            alert('Export functionality coming soon!');
        }
    </script>
}
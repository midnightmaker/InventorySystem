@model InventorySystem.Services.ExplodedSubAssembly

<div class="card mb-3">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-0">
                    <i class="fas fa-layer-group text-info"></i>
                    <strong>@Model.BomNumber</strong> - @Model.Description
                    <span class="badge bg-info ms-2">Level @Model.Level</span>
                </h6>
                @if (!string.IsNullOrEmpty(Model.AssemblyPartNumber))
                {
                    <small class="text-muted">Assembly P/N: @Model.AssemblyPartNumber</small>
                }
            </div>
            <div class="text-end">
                <div class="text-muted small">Version: @Model.Version</div>
                <div class="fw-bold text-success">$@Model.SubAssemblyCost.ToString("F2")</div>
                <div class="text-muted small">@Model.ComponentCount components</div>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Components.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-borderless">
                    <thead class="table-light">
                        <tr>
                            <th>Part Number</th>
                            <th>Description</th>
                            <th>Qty</th>
                            <th>Unit Cost</th>
                            <th>Extended Cost</th>
                            <th>Reference</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal subTotal = 0;
                        }
                        @foreach (var component in Model.Components)
                        {
                            subTotal += component.ExtendedCost;
                            <tr>
                                <td><strong>@component.PartNumber</strong></td>
                                <td>@component.Description</td>
                                <td>@component.Quantity</td>
                                <td>$@component.UnitCost.ToString("F4")</td>
                                <td><strong>$@component.ExtendedCost.ToString("F2")</strong></td>
                                <td>@component.ReferenceDesignator</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="4">Components Subtotal:</th>
                            <th>$@subTotal.ToString("F2")</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }

        @if (Model.NestedSubAssemblies.Any())
        {
            <div class="mt-3">
                <h6 class="text-info">
                    <i class="fas fa-sitemap"></i> Nested Sub-Assemblies (@Model.NestedSubAssemblies.Count)
                </h6>
                <div class="ms-3">
                    @foreach (var nestedSub in Model.NestedSubAssemblies)
                    {
                        await Html.RenderPartialAsync("_ExplodedSubAssemblyPartial", nestedSub);
                    }
                </div>
            </div>
        }
    </div>
</div>
@model InventorySystem.Models.Bom
@using InventorySystem.Services
@{
    ViewData["Title"] = "Delete BOM";
    var d = ViewBag.Deletability as BomDeletabilityResult;
    var canDelete = d?.CanDelete ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-danger">
        <i class="fas fa-trash-alt"></i> Delete BOM
    </h1>
    <a href="/Boms/Details/@Model.Id" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Details
    </a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Big warning banner -->
<div class="alert alert-danger border border-danger border-2">
    <div class="d-flex align-items-start gap-3">
        <i class="fas fa-exclamation-triangle fa-3x text-danger flex-shrink-0 mt-1"></i>
        <div>
            <h4 class="alert-heading mb-1">This action is permanent and cannot be undone.</h4>
            <p class="mb-0">
                You are about to permanently delete BOM <strong>@Model.BomNumber</strong>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <span>— @Model.Description</span>
                }. All associated components (BOM items) and document references will also be removed.
            </p>
        </div>
    </div>
</div>

<div class="row">
    <!-- Left: BOM Summary -->
    <div class="col-md-5">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-layer-group"></i> BOM to be Deleted</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">BOM Number:</dt>
                    <dd class="col-sm-7"><strong>@Model.BomNumber</strong></dd>

                    <dt class="col-sm-5">Description:</dt>
                    <dd class="col-sm-7">@(string.IsNullOrEmpty(Model.Description) ? "—" : Model.Description)</dd>

                    @if (!string.IsNullOrEmpty(Model.AssemblyPartNumber))
                    {
                        <dt class="col-sm-5">Assembly P/N:</dt>
                        <dd class="col-sm-7">@Model.AssemblyPartNumber</dd>
                    }

                    <dt class="col-sm-5">Version:</dt>
                    <dd class="col-sm-7">
                        <span class="badge @(Model.IsCurrentVersion ? "bg-success" : "bg-secondary")">
                            @Model.Version
                            @if (Model.IsCurrentVersion){ <i class="fas fa-check"></i> }
                        </span>
                    </dd>

                    <dt class="col-sm-5">Type:</dt>
                    <dd class="col-sm-7">
                        @if (Model.ParentBomId == null)
                        {
                            <span class="badge bg-primary">Main Assembly</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Sub-Assembly</span>
                        }
                    </dd>

                    <dt class="col-sm-5">Created:</dt>
                    <dd class="col-sm-7">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
                </dl>
            </div>
        </div>

        @if (d != null)
        {
            <!-- Impact summary tiles -->
            <div class="row g-2 mt-2">
                <div class="col-4">
                    <div class="card text-center @(d.ComponentCount > 0 ? "border-warning" : "")">
                        <div class="card-body p-2">
                            <h4 class="@(d.ComponentCount > 0 ? "text-warning" : "text-muted") mb-0">@d.ComponentCount</h4>
                            <small class="text-muted">Component(s)</small>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card text-center @(d.SubAssemblyCount > 0 ? "border-warning" : "")">
                        <div class="card-body p-2">
                            <h4 class="@(d.SubAssemblyCount > 0 ? "text-warning" : "text-muted") mb-0">@d.SubAssemblyCount</h4>
                            <small class="text-muted">Sub-Assembly(s)</small>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card text-center @(d.DocumentCount > 0 ? "border-info" : "")">
                        <div class="card-body p-2">
                            <h4 class="@(d.DocumentCount > 0 ? "text-info" : "text-muted") mb-0">@d.DocumentCount</h4>
                            <small class="text-muted">Document(s)</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Right: Blocking reasons / impact -->
    <div class="col-md-7">
        @if (d != null && !d.CanDelete)
        {
            <!-- Blocked -->
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-ban"></i> Deletion Blocked</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">This BOM cannot be deleted because of the following reason(s):</p>
                    <ul class="list-group list-group-flush mb-3">
                        @foreach (var reason in d.BlockingReasons)
                        {
                            <li class="list-group-item list-group-item-danger">
                                <i class="fas fa-times-circle me-2"></i>@reason
                            </li>
                        }
                    </ul>

                    @if (d.ReferencedByBoms.Any())
                    {
                        <h6>Referenced by the following BOMs:</h6>
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var refBom in d.ReferencedByBoms)
                            {
                                <li class="list-group-item">
                                    <i class="fas fa-layer-group me-2 text-warning"></i>@refBom
                                </li>
                            }
                        </ul>
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i>
                            To delete this BOM, first open each parent BOM listed above and use
                            <strong>"Remove Sub-Assembly"</strong> to detach it.
                        </div>
                    }

                    @if (d.ProductionRunCount > 0)
                    {
                        <div class="alert alert-warning mb-0 mt-2">
                            <i class="fas fa-industry"></i>
                            This BOM has been used in <strong>@d.ProductionRunCount</strong> production run(s).
                            Production history must be preserved; deletion is not allowed.
                        </div>
                    }

                    @if (d.FinishedGoodCount > 0)
                    {
                        <div class="alert alert-warning mb-0 mt-2">
                            <i class="fas fa-box"></i>
                            There are <strong>@d.FinishedGoodCount</strong> finished good(s) linked to this BOM.
                            Remove those finished goods before deleting the BOM.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a href="/Boms/Details/@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to BOM Details
                    </a>
                </div>
            </div>
        }
        else
        {
            <!-- Safe to delete — show the confirmation form -->
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Permanent Deletion</h5>
                </div>
                <div class="card-body">
                    @if (d != null && d.ComponentCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-cubes"></i>
                            <strong>@d.ComponentCount component(s)</strong> (BOM line items) will be permanently removed
                            from this BOM. The underlying inventory items themselves are <em>not</em> deleted.
                        </div>
                    }

                    @if (d != null && d.SubAssemblyCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-sitemap"></i>
                            This BOM contains <strong>@d.SubAssemblyCount sub-assembly(s)</strong>.
                            Those child BOMs will have their parent link cleared but will <em>not</em> be deleted.
                        </div>
                    }

                    @if (d != null && d.DocumentCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-file-alt"></i>
                            <strong>@d.DocumentCount document reference(s)</strong> attached to this BOM will be deleted.
                        </div>
                    }

                    <div class="alert alert-danger">
                        <i class="fas fa-skull-crossbones"></i>
                        <strong>There is no undo.</strong> Once deleted, this BOM and all its data cannot be recovered.
                    </div>

                    <p>To confirm, type the BOM number <strong>@Model.BomNumber</strong> in the box below:</p>

                    <input type="text"
                           id="confirmBomNumber"
                           class="form-control mb-3"
                           placeholder="Type BOM number to confirm..."
                           autocomplete="off" />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-2">
                            <button type="submit"
                                    id="deleteBtn"
                                    class="btn btn-danger"
                                    disabled>
                                <i class="fas fa-trash-alt"></i> Permanently Delete BOM
                            </button>
                            <a href="/Boms/Details/@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const confirmInput = document.getElementById('confirmBomNumber');
            const deleteBtn = document.getElementById('deleteBtn');
            const expected = '@Model.BomNumber';

            if (confirmInput && deleteBtn) {
                confirmInput.addEventListener('input', function () {
                    deleteBtn.disabled = this.value.trim() !== expected;
                });

                // Extra guard: intercept form submit
                deleteBtn.closest('form')?.addEventListener('submit', function (e) {
                    if (confirmInput.value.trim() !== expected) {
                        e.preventDefault();
                        confirmInput.classList.add('is-invalid');
                    }
                });
            }
        })();
    </script>
}
